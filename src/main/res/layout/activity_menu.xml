<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@drawable/bgmenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="114dp"
                    android:layout_height="72dp"
                    app:srcCompat="@drawable/logo" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="122dp"
                    android:layout_height="69dp"
                    android:layout_gravity="right"
                    app:srcCompat="@drawable/orang" />

        </LinearLayout>


        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="#E91E63"
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/bckOjun"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Mau keliling kampus, Berangkat Kuliah,"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ngeprint Tugas atau Laprak?â€"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="OjUN in Ajaa"/>

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="#E91E63"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/bckOjun"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="30dp">

                <ImageButton
                    android:id="@+id/imageView6"
                    android:layout_width="160dp"
                    android:layout_height="170dp"
                    android:background="@drawable/ojunmen" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/imageView7"
                    android:layout_width="160dp"
                    android:layout_height="170dp"
                    android:layout_gravity="right"
                    android:background="@drawable/ojunride" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/imageView8"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:background="@drawable/ojunprint" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/imageView9"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:layout_gravity="right"
                android:background="@drawable/help" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menubawahpic" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/teal_700">

        <include layout="@layout/side_bar_content"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>

